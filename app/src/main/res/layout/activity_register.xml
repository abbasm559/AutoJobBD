                    android:id="@+id/expDesignationId"
                    android:hint="@string/enter_here"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/organization_name"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/expOrganizId"
                    android:hint="@string/enter_here"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strat_date"
                    android:textSize="24sp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/expStartDate"
                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="date"
                    android:layout_marginBottom="4dp"
                    android:hint="@string/strat_date"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/end_date"
                    android:textSize="24sp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/expEndDate"
                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="date"
                    android:layout_marginBottom="4dp"
                    android:hint="@string/end_date"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/responsibilities"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/expResponsId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp" />

            </LinearLayout>
            <ToggleButton
                android:layout_gravity="center_horizontal"
                android:id="@+id/toggleButtonId"
                android:textOn="Green"
                android:textOff="Yellow"
                android:onClick="changeColor"
                android:text="Color change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </ScrollView>


